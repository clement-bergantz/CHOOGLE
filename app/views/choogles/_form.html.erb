<!-- Need CSS improvment -->
<%= simple_form_for(@choogle, remote: true) do |f| %>
  <div class="date-form">

<div class="date-flex">
    <div class="form-title-element">
      <%= f.input :title, error: "Your event need a title" , label: "Title of your event", placeholder: "Title of your Choogle", :input_html => { :size => 40} %>
    </div>
      <div>
        <%= f.input :happens_at, as: :text, label: "Event's date", placeholder: "Event's date", input_html: { class: 'flatpickr-input form-date-element' } %>
      </div>
</div>
    <div class="date-flex">
      <div>
        <%= f.input :due_at, as: :text, label: "Closing votes date", placeholder: "Closing votes date", input_html: { class: 'flatpickr-input form-date-element' } %>
      </div>
  <div class="date-form-btn">
    <%= f.button :submit, class: 'btn btn-primary'  %>
  </div>
    </div>
  </div>
<% end %>
