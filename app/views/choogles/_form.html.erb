<%= simple_form_for @choogle do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, label: "Give a title for your Choogle" %>
  <%= f.input :happens_at, as: :text, label: "happens_at", input_html: { class: 'flatpickr-input' } %>
  <%= f.input :due_at, as: :text, label: "due_at", input_html: { class: 'flatpickr-input' } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $(".flatpickr-input").flatpickr(
        {
          enableTime: true,
          time_24hr: false,
          minuteIncrement: 15,
        }
      );
    });
  <% end %>
<% end %>
