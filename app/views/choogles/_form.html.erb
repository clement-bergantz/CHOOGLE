<div class="date-form">
  <%= simple_form_for(@choogle) do |f| %>
    <div class="form-title-element">
      <%= f.input :title, error: "Your Choogle need a title" , label: "Title of your Choogle", placeholder: "Title of your Choogle" %>
    </div>
    <div class="date-flex">
      <div>
        <%= f.input :happens_at, as: :text, label: "Choogle's date", placeholder: "Choogle's date", input_html: { class: 'flatpickr-input form-date-element' } %>
      </div>
      <div>
        <%= f.input :due_at, as: :text, label: "Closing votes date", placeholder: "Closing votes date", input_html: { class: 'flatpickr-input form-date-element' } %>
      </div>
    </div>
</div>
<br>
<br>
<div class="date-form-btn" data-toggle="modal" data-target="#newProposalModal">
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $(".flatpickr-input").flatpickr(
        {
          enableTime: true,
          time_24hr: false,
          minuteIncrement: 15,
        }
      );
    });
  <% end %>
    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDUTmt0lPVV6UQEaPaFzlEV3yxfO43cxnI"></script>
<% end %>
