<%= simple_form_for(@choogle, remote: true) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-3">
        <%= f.input :title, error: "Your event needs a name" , label: false, placeholder: "what's the occasion ? Afterwork, dinner, holidays..."%>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= f.input :happens_at, as: :text, label: false, placeholder: "when ?", input_html: { class: 'flatpickr-input form-date-element' } %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <%= f.input :due_at, as: :text, label: false, placeholder: "deadline for the poll ?", input_html: { class: 'flatpickr-input form-date-element'} %>
      </div>
      <div class="col-xs-12 col-sm-3 date-form-btn btn-setup-1">
        <%= f.button :submit, value: "Create a poll", class: "btn-primary" %>
      </div>
    </div>
    <div id="choogle-errors"></div>
  </div>
<% end %>
