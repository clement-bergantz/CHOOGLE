<%= simple_form_for([@proposal]) do |f| %>
  <%= f.error_notification %>

  <!-- If it's a guest session, ask for his name -->

  <% unless user_signed_in? %>
    <%= f.simple_fields_for :user do |h| %>
      <%= h.input :first_name, label: "Your name", input_html: {id: 'sign_up_code', value: @user.first_name } %>
    <% end %>
  <% end %>

  <%= f.input :place, label: "Select a place" %>

  <%= f.simple_fields_for :proposal_tags do |g| %>
    <%= g.input :tags, label: "Add tags to this place" %>
  <% end %>

  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
