<div class="wrapper page-forms">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        
          
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs custom-edit-form">
            <h2 class="text-center">Change your password</h2>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Change my password", class: "btn-proposal center-block btn-registration" %>
            </div>

          </div>
          <% end %>

          <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>

<style>

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>