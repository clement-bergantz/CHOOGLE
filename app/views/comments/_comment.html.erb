<li class="media-comment">
    <% if comment.user.facebook_picture_url.nil?  %>
      <div class="avatar"><%= image_tag "default-avatar.jpg", class: "avatar"%></div>
    <% else %>
      <img src="<%= comment.user.facebook_picture_url %>" alt="Picture of <%= comment.user.first_name %>" class="avatar">
    <% end %>
  <div class="media-body">
    <p class="media-heading"><%= comment.user.first_name %>
    <div class='text-area'><%= comment.content %></div>
    <small class="text-muted"> <%= comment.created_at.strftime("%^a %H:%M %p") %></small></p>
  </div>
</li>
