<%= simple_form_for([@choogle, @proposal]) do |f| %>
  <%= f.error_notification %>

  <!-- If it's a guest session, ask for his name -->

  <%= f.input :place, label: "Select a place" %>

  <%= f.simple_fields_for :proposal_tags do |g| %>
    <%= g.input :tags, label: "Add tags to this place" %>
  <% end %>

  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
