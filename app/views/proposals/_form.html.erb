<%= simple_form_for([choogle, proposal]) do |f| %>
  <%= f.error_notification %>

  <!-- If it's a guest session, ask for his name -->
  <% unless user_signed_in? %>
    <%= f.simple_fields_for :user do |h| %>
      <%= h.input :first_name, label: "Let your friends know who you are", input_html: {id: 'sign_up_code', value: current_or_guest_user.first_name } %>
    <% end %>
  <% end %>
  <%= f.input :place, label: "Add a place" %>
  <%= f.association :tags, collection: current_or_guest_user.tags, label: "Select/Add tags to this place (max 20 char)" %>
  <%= f.button :submit, class: 'btn btn-primary btn-proposal-margin' %>
<% end %>

<script>
  $("#proposal_tag_ids").select2(
    {
      tags: true,
      theme: "bootstrap",
      maximumInputLength: 20,
      placeholder: "Select or create your own tags."
    });
</script>
