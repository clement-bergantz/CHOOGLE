
<!-- Banner -->
<div class="banner">
  <div class="banner-content">

    <h1>🎯 Choogle a place to go 🎯</h1>
    <p>Decision-making tool to choose the best place to go</p>

    <!-- form -->
    <div class="firstform">
    <%= simple_form_for @choogle, :html => { :method => :post, :class => "form-inline" } do |f| %>
      <%= f.error_notification %>
      <%= f.input :title, name: "choogle", label: false, placeholder: 'Name your event', :input_html => { :size => 40, :maxlength => 40 } %>
      <%= f.submit "Let's Choogle", name: nil, class: "btn btn-primary" %>
    <% end %>
    </div>

  </div>
</div>

